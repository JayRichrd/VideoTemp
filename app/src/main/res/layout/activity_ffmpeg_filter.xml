<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FfmpegFilterActivity">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_filter_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_filter_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_filter_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_2"
        app:layout_constraintBottom_toBottomOf="@id/btn_filter_1"
        app:layout_constraintEnd_toStartOf="@id/btn_filter_3"
        app:layout_constraintStart_toEndOf="@id/btn_filter_1"
        app:layout_constraintTop_toTopOf="@id/btn_filter_1" />

    <Button
        android:id="@+id/btn_filter_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_3"
        app:layout_constraintBottom_toBottomOf="@id/btn_filter_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_filter_1" />

</androidx.constraintlayout.widget.ConstraintLayout>